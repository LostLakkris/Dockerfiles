FROM linuxserver/sonarr:latest
ENV LAKKRIS_SERVICE="sonarr" \
    LAKKRIS_CONTENT="tv" \
    LAKKRIS_ICON="plugins/images/tabs/sonarr.png" \
    LAKKRIS_PORT="8989" \
    LAKKRIS_CONFIGFILE="/config/config.xml" \
    LAKKRIS_SERVERNAME="lostlakkris"

EXPOSE 7946

COPY bin/serf_0.8.1_amd64 /usr/sbin/serf
COPY bin/jq_1.6_amd64 /usr/sbin/jq
COPY bin/templater /usr/sbin/templater
COPY bin/inotifyd_1.27.1_686 /sbin/inotifyd
COPY bin/nc_1.27.1_686 /usr/bin/nc

COPY lakkris/ /
