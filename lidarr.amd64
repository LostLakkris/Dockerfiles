FROM linuxserver/lidarr:latest
EXPOSE 7946
COPY bin/serf_0.8.1_amd64 /usr/local/bin/serf
COPY bin/jq_1.6_amd64 /usr/local/bin/jq
COPY bin/templater /usr/local/bin/templater
ENV LAKKRIS_SERVICE="lidarr" \
    LAKKRIS_CONTENT="music" \
    LAKKRIS_ICON="plugins/images/tabs/lidarr.png" \
    LAKKRIS_PORT="8686" \
    LAKKRIS_SERVERNAME="lazylakkris"
COPY lakkris/ /
