FROM linuxserver/hydra2:latest
EXPOSE 7946
COPY bin/serf_0.8.1_amd64 /usr/sbin/serf
COPY bin/jq_1.6_amd64 /usr/sbin/jq
COPY bin/templater /usr/sbin/templater
COPY bin/inotifyd_1.27.1_686 /sbin/inotifyd
COPY bin/nc_1.27.1_686 /usr/bin/nc
ENV LAKKRIS_SERVICE="nzbhydra" \
    LAKKRIS_ICON="plugins/images/tabs/hydra2.png" \
    LAKKRIS_CONTENT="nzb" \
    LAKKRIS_PORT="5076" \
    LAKKRIS_CONFIGFILE="/config/nzbhydra.yml" \
    LAKKRIS_SERVERNAME="lazylakkris"
COPY lakkris/ /
